<h1>List of all recipes</h1><br>

<% @recipes.each do |recipe| %>
  <p>Recipe name: <a href="/recipes/<%=recipe.id%>"><%= recipe.name %></a></p>
  <p>Recipe ingredients: <%= recipe.ingredients %></p>
  <p>Cook time: <%= recipe.recipe_cook_time %></p><br>
<% end %>

<h3><a href="/recipes/new">Create another recipe</a></h3>
